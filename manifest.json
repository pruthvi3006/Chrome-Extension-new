{
  "manifest_version": 3,
  "name": "Draggable Sidepanel Extension",
  "version": "1.0.0",
  "description": "Chrome extension with draggable icon and sidepanel",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon.svg"],
      "matches": ["<all_urls>"]
    }
  ]
} 